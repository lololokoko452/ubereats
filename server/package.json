{
    "name": "ubereats-api",
    "version": "1.0.0",
    "description": "API Express + MongoDB pour la demo Uber Eats",
    "main": "src/index.js",
    "private": true,
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "seed": "node -r dotenv/config scripts/seed.js dotenv_config_path=.env",
        "migrate": "node scripts/migrate.js",
        "lint": "eslint \"src\" \"scripts\" \"tests\" --ext .js",
        "test": "jest --runInBand --coverage",
        "build": "npm run lint \u0026\u0026 npm run test"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-async-errors": "^3.1.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^7.6.3",
        "morgan": "^1.10.0",
        "slugify": "^1.6.6"
    },
    "devDependencies": {
        "nodemon": "^3.1.0",
        "eslint": "^8.57.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.4.0",
        "eslint-plugin-promise": "^6.2.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.4"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverage": false
    }
}
